// Styles for Forecast Component

.forecast-container
  box-shadow: 5px 5px 10px 0px rgba(0,0,0,0.3);
  margin: 0 10px

  a
    display: block
    padding 20px
    position: relative
    text-decoration: none

    &:after
      content: ''
      background: #f5cdb4
      height 100%
      opacity 0
      position: absolute
      left 0
      top 0
      transition: 0.3s opacity ease
      width 100%

    &:hover
      &:after
        opacity: .7

    img
      margin: 0 auto 10px
      max-width 200px
      width 100%

    h3
      color #9a8822
      font-family sans-serif
      text-transform uppercase
      text-align: center

    .temperature
      display flex
      justify-content: space-around
      width: 100%

      .temp-low, .temp-high
        color: #000
        position: relative
        text-align: center

        &:after
          content: ''
          background: #f5cdb4
          height 2px
          position: absolute
          left: 0
          bottom: 5px
          width: 100%