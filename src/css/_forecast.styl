// Styles for Forecast Component

.forecast-container
  box-shadow: 5px 5px 10px 0px rgba(0,0,0,0.3);
  margin: 0 10px
  padding 20px

  img
    margin: 0 auto 10px
    max-width 200px
    width 100%

  h3
    color #9a8822
    font-family sans-serif
    text-transform uppercase
    text-align: center

  .temperature
    display flex
    justify-content: space-around
    width: 100%

    .temp-low, .temp-high
      position: relative
      text-align: center

      &:after
        content: ''
        background: #f5cdb4
        height 2px
        position: absolute
        left: 0
        bottom: 5px
        width: 100%